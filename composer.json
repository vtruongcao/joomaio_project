{
    "name": "smpleader/spt-project",
    "type": "project",
    "description": "The project to use SPT Framework.",
    "keywords": [
        "framework", "spt", "spt-project"
    ],
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^8.0",
        "composer/composer": "dev-main",
        "google/apiclient": "^2.13",
        "guzzlehttp/guzzle": "^7.4",
        "joomla/di": "~1.3",
        "phpmailer/phpmailer": "^6.6.5",
        "smpleader/dtm": "@dev",
        "smpleader/spt": "^0.8.0",
        "symfony/process": "^7.0"
    },
    "require-dev": { 
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "process-timeout":0
    },
    "autoload": {
        "exclude-from-classmap": ["/test/"],
        "psr-4": {
            "App\\": "php_modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
         
    }
}
